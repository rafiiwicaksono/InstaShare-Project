<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
</head>
<body>
    <button><a href="/login">Login</a></button>
    <button><a href="/">INSTASHARE</a></button>

    
    <h1>Register</h1>

    <% if (errors) { %>
        <ul style="color: red;">
            <% errors.split(`,`).forEach(error => { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/signup" method="post">
        <p>
            <label>Username</label>
            <br>
            <input type="text" name="username" placeholder="Input Username">
        </p>

        <p>
            <label>Email</label>
            <br>
            <input type="text" name="email" placeholder="Input Email">
        </p>

        <p>
            <label>Password</label>
            <br>
            <input type="password" name="password" placeholder="Input Password">
        </p>

        <p>
            <label>Role</label>
            <br>
            <select name="role">
                <option value="" selected disabled>select the option...</option>
                <option value="basic">basic</option>
                <option value="verified">verified</option>
            </select>
        </p>

        <p>
            <label>First Name</label>
            <br>
            <input type="text" name="firstName" placeholder="Input First Name">
        </p>

        <p>
            <label>Last Name</label>
            <br>
            <input type="text" name="lastName" placeholder="Input Last Name">
        </p>

        <p>
            <label>Date Of Birth</label>
            <br>
            <input type="date" name="dateOfBirth">
        </p>

        <p>
            <label>Gender</label>
            <br>
            <input type="radio" name="gender" value="Male">
            <label>Male</label>
            <input type="radio" name="gender" value="Female">
            <label>Female</label>            
        </p>

        <p>
            <label>Phone Number</label>
            <br>
            <input type="text" name="phone" placeholder="Input Phone Number">
        </p>

        <button type="submit">Create</button>
    </form>
</body>
</html>