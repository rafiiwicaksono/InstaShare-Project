<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>Post InstaShare</h1>

    <p>
        <a href="/home">Home</a>||
        <a href="/profile">Profile</a>||
        <a href="/logout">Logout</a>
    </p>

    <p>
        <a href="/home/addPost">Add Post</a>
    </p>

    <form action="">
        <input type="text" name="search" placeholder="Search by Username">
        <button type="submit">Search</button>
    </form>

    <table border="1">
        <thead>
            <tr>
                <th>No</th>
                <th>Username</th>
                <th>Caption</th>
                <th>Photo</th>
                <th>Likes</th>
                <th>Delete Post</th>
            </tr>
        </thead>

        <tbody>
            <% post.forEach((data, i) => { %>
                <tr>
                    <td><%= ++i %></td>
                    <td><%= data.User.username %></td>
                    <td><%= data.caption %></td>
                    <td>
                        <img src="<%= data.imgUrl %>" alt="gambar" style="width: 20%; height: 20%;">
                    </td>
                    <td>
                        <%= data.likes %>
                        ||
                        <a href="/home/<%= data.id %>/like">Like</a>
                    </td>
                    <td><a href="/home/<%= data.id %>/delete">Delete</a></td>
                </tr>
            <% }) %>
           
        </tbody>
    </table>
</body>
</html>